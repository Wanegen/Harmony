<% if @vinyls.any? %>
  <% @vinyls.each do |vinyl| %>
    <div class="flex content-center items-center flex-col m-8">
      <div class="flex flex-col">
        <hr class="m-8">
        <span class="font-bold text-white"><%= vinyl.title %></span>
        <span class="text-white mb-3"><%= vinyl.artist_name %></span>
        <%= link_to "Voir l'album", vinyl_path(vinyl), class: "w-40 py-2 px-4 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50" %>
        <hr class="m-8">
      </div>
    </div>
  <% end %>
  <% else %>
    <p>Nous n'avons pas trouvé de correspondance à votre recherche.</p>
  <% end %>
