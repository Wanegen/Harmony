<% if @vinyls.any? %>
  <div>
    <% @vinyls.each do |vinyl| %>
      <%= link_to vinyl_path(vinyl), class: "block px-4 py-2" do %>
        <div class="bg-dark flex items-center rounded-lg p-2 flex-grow">
          <img class="shadow-md rounded-full w-20 h-20" src="<%= vinyl.image %>" alt="">
            <div class="flex flex-col text-left ml-5">
              <span class="text-xl font-tuskerGrotesk text-white tracking-wide"><%= vinyl.title %></span>
              <span class="text-red"><%= vinyl.artist_name %></span>
              <span class="text-white font-scto"><%= vinyl.year %></span>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p class="text-white text-center font-scto text-xl mt-10">Aucun album correspondant :(</p>
<% end %>
